{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "intake_output.json",
  "title": "Citizen Intake Classification Output",
  "description": "Schema for procedure classification and field collection output from the LLM",
  "type": "object",
  "properties": {
    "procedure_id": {
      "type": ["string", "null"],
      "description": "Procedure identifier (e.g., 'import-regular')"
    },
    "procedure_name": {
      "type": ["string", "null"],
      "description": "Human-readable procedure name"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Classification confidence score"
    },
    "rationale": {
      "type": "string",
      "description": "Explanation for why this procedure was selected"
    },
    "detected_fields": {
      "type": "object",
      "description": "Fields detected and collected from user input",
      "additionalProperties": {
        "oneOf": [
          { "type": "string" },
          { "type": "number" },
          { "type": "array", "items": { "type": "string" } }
        ]
      }
    },
    "missing_fields": {
      "type": "array",
      "description": "Required fields that are still missing",
      "items": { "type": "string" }
    }
  },
  "required": ["procedure_id", "confidence", "rationale", "detected_fields", "missing_fields"]
}
