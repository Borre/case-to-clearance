{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "extraction_packing_list.json",
  "title": "Packing List Field Extraction (LLM Output)",
  "description": "Schema for structured field extraction from packing lists returned by the LLM",
  "type": "object",
  "properties": {
    "fields": {
      "type": "object",
      "description": "Extracted fields from the packing list",
      "properties": {
        "pl_number": {
          "type": "string",
          "description": "Packing list number"
        },
        "shipper_name": {
          "type": "string",
          "description": "Name of the shipper"
        },
        "consignee_name": {
          "type": "string",
          "description": "Name of the consignee"
        },
        "pl_date": {
          "type": "string",
          "description": "Packing list date"
        },
        "total_packages": {
          "type": ["number", "string"],
          "description": "Total number of packages"
        },
        "package_type": {
          "type": "string",
          "description": "Type of packaging"
        },
        "total_weight": {
          "type": ["number", "string"],
          "description": "Total weight with units"
        },
        "total_volume": {
          "type": ["number", "string"],
          "description": "Total volume with units"
        },
        "marks_numbers": {
          "type": "string",
          "description": "Shipping marks"
        },
        "item_summary": {
          "type": "string",
          "description": "Brief summary of items"
        }
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Overall extraction confidence"
    },
    "low_confidence_fields": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Fields with low confidence that need verification"
    },
    "missing_fields": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Required fields that could not be extracted"
    },
    "extraction_timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the extraction was performed"
    }
  },
  "required": ["fields", "confidence"]
}
