{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "extraction_packing_list.json",
  "title": "Packing List Field Extraction",
  "description": "Schema for structured field extraction from packing lists",
  "type": "object",
  "properties": {
    "doc_id": {
      "type": "string",
      "description": "Document identifier"
    },
    "doc_type": {
      "type": "string",
      "enum": ["packing_list", "pl"],
      "description": "Document type"
    },
    "fields": {
      "type": "object",
      "description": "Extracted fields from the packing list",
      "properties": {
        "pl_number": {
          "type": "string",
          "description": "Packing list number"
        },
        "invoice_number": {
          "type": "string",
          "description": "Related invoice number"
        },
        "shipper_name": {
          "type": "string",
          "description": "Name of the shipper"
        },
        "consignee_name": {
          "type": "string",
          "description": "Name of the consignee"
        },
        "pl_date": {
          "type": "string",
          "description": "Packing list date"
        },
        "total_packages": {
          "type": "number",
          "description": "Total number of packages"
        },
        "total_weight": {
          "type": "number",
          "description": "Total weight"
        },
        "weight_unit": {
          "type": "string",
          "description": "Weight unit (e.g., kg, lb)"
        },
        "total_volume": {
          "type": "number",
          "description": "Total volume"
        },
        "volume_unit": {
          "type": "string",
          "description": "Volume unit (e.g., cbm, cuft)"
        },
        "marks_and_numbers": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Shipping marks and numbers"
        },
        "items": {
          "type": "array",
          "description": "List of packed items",
          "items": {
            "type": "object",
            "properties": {
              "description": { "type": "string" },
              "quantity": { "type": "number" },
              "unit": { "type": "string" },
              "weight": { "type": "number" },
              "volume": { "type": "number" }
            }
          }
        }
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Overall extraction confidence"
    },
    "low_confidence_fields": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Fields with low confidence that need verification"
    },
    "missing_fields": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Required fields that could not be extracted"
    },
    "extraction_timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the extraction was performed"
    }
  },
  "required": ["doc_id", "doc_type", "fields", "confidence"]
}
