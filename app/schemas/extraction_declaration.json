{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "extraction_declaration.json",
  "title": "Customs Declaration Field Extraction (LLM Output)",
  "description": "Schema for structured field extraction from customs declarations returned by the LLM",
  "type": "object",
  "properties": {
    "fields": {
      "type": "object",
      "description": "Extracted fields from the customs declaration",
      "properties": {
        "declaration_number": {
          "type": "string",
          "description": "Declaration reference number"
        },
        "declaration_date": {
          "type": "string",
          "description": "Declaration filing date"
        },
        "declarant_name": {
          "type": "string",
          "description": "Name of declarant/importer"
        },
        "tax_id": {
          "type": "string",
          "description": "Tax ID / RUC / NIT"
        },
        "procedure_code": {
          "type": "string",
          "description": "Customs procedure code"
        },
        "declared_value": {
          "type": ["number", "string"],
          "description": "Declared customs value"
        },
        "currency": {
          "type": "string",
          "description": "Currency of declared value"
        },
        "origin_countries": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Countries of origin"
        },
        "hs_codes": {
          "type": "array",
          "items": { "type": "string" },
          "description": "HS codes for declared goods"
        },
        "goods_description": {
          "type": "string",
          "description": "Description of goods"
        },
        "warehouse": {
          "type": "string",
          "description": "Warehouse or customs post"
        },
        "shipment_id": {
          "type": "string",
          "description": "Shipment identifier"
        },
        "bl_number": {
          "type": "string",
          "description": "Bill of lading number"
        }
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Overall extraction confidence"
    },
    "low_confidence_fields": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Fields with low confidence that need verification"
    },
    "missing_fields": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Required fields that could not be extracted"
    },
    "extraction_timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the extraction was performed"
    }
  },
  "required": ["fields", "confidence"]
}
