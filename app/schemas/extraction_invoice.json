{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "extraction_invoice.json",
  "title": "Invoice Field Extraction",
  "description": "Schema for structured field extraction from commercial invoices",
  "type": "object",
  "properties": {
    "doc_id": {
      "type": "string",
      "description": "Document identifier"
    },
    "doc_type": {
      "type": "string",
      "enum": ["invoice"],
      "description": "Document type"
    },
    "fields": {
      "type": "object",
      "description": "Extracted fields from the invoice",
      "properties": {
        "invoice_number": {
          "type": "string",
          "description": "Invoice number"
        },
        "invoice_date": {
          "type": "string",
          "description": "Invoice date (ISO format or common format)"
        },
        "seller_name": {
          "type": "string",
          "description": "Name of the seller/exporter"
        },
        "seller_address": {
          "type": "string",
          "description": "Address of the seller"
        },
        "buyer_name": {
          "type": "string",
          "description": "Name of the buyer/importer"
        },
        "buyer_address": {
          "type": "string",
          "description": "Address of the buyer"
        },
        "total_amount": {
          "type": "number",
          "description": "Total invoice amount"
        },
        "currency": {
          "type": "string",
          "description": "Currency code (e.g., USD, EUR)"
        },
        "description_of_goods": {
          "type": "string",
          "description": "Description of goods/services"
        },
        "hs_codes": {
          "type": "array",
          "items": { "type": "string" },
          "description": "HS codes for the goods"
        },
        "quantity": {
          "type": "number",
          "description": "Total quantity"
        },
        "unit_of_measure": {
          "type": "string",
          "description": "Unit of measure (e.g., kg, pcs)"
        },
        "unit_price": {
          "type": "number",
          "description": "Price per unit"
        },
        "payment_terms": {
          "type": "string",
          "description": "Payment terms (e.g., NET 30)"
        },
        "incoterm": {
          "type": "string",
          "description": "International commerce term (e.g., FOB, CIF)"
        }
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Overall extraction confidence"
    },
    "low_confidence_fields": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Fields with low confidence that need verification"
    },
    "missing_fields": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Required fields that could not be extracted"
    },
    "extraction_timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the extraction was performed"
    }
  },
  "required": ["doc_id", "doc_type", "fields", "confidence"]
}
