{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "extraction_invoice.json",
  "title": "Invoice Field Extraction (LLM Output)",
  "description": "Schema for structured field extraction from commercial invoices returned by the LLM",
  "type": "object",
  "properties": {
    "fields": {
      "type": "object",
      "description": "Extracted fields from the invoice",
      "properties": {
        "invoice_number": {
          "type": "string",
          "description": "Invoice number"
        },
        "invoice_date": {
          "type": "string",
          "description": "Invoice date (ISO format or common format)"
        },
        "supplier_name": {
          "type": "string",
          "description": "Name of the supplier/seller"
        },
        "buyer_name": {
          "type": "string",
          "description": "Name of the buyer/importer"
        },
        "total_amount": {
          "type": ["number", "string"],
          "description": "Total invoice amount"
        },
        "currency": {
          "type": "string",
          "description": "Currency code (e.g., USD, EUR)"
        },
        "shipment_id": {
          "type": "string",
          "description": "Shipment reference or B/L number if present"
        },
        "hs_codes": {
          "type": "array",
          "items": { "type": "string" },
          "description": "HS codes for the goods"
        },
        "line_items": {
          "type": "string",
          "description": "Summary of items (count, description)"
        }
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Overall extraction confidence"
    },
    "low_confidence_fields": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Fields with low confidence that need verification"
    },
    "missing_fields": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Required fields that could not be extracted"
    },
    "extraction_timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the extraction was performed"
    }
  },
  "required": ["fields", "confidence"]
}
