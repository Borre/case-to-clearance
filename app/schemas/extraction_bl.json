{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "extraction_bl.json",
  "title": "Bill of Lading Field Extraction",
  "description": "Schema for structured field extraction from bills of lading",
  "type": "object",
  "properties": {
    "doc_id": {
      "type": "string",
      "description": "Document identifier"
    },
    "doc_type": {
      "type": "string",
      "enum": ["bl", "bill_of_lading"],
      "description": "Document type"
    },
    "fields": {
      "type": "object",
      "description": "Extracted fields from the bill of lading",
      "properties": {
        "bl_number": {
          "type": "string",
          "description": "Bill of lading number"
        },
        "carrier_name": {
          "type": "string",
          "description": "Name of the shipping carrier"
        },
        "vessel_name": {
          "type": "string",
          "description": "Name of the vessel"
        },
        "voyage_number": {
          "type": "string",
          "description": "Voyage number"
        },
        "port_of_loading": {
          "type": "string",
          "description": "Port where goods were loaded"
        },
        "port_of_discharge": {
          "type": "string",
          "description": "Port where goods will be discharged"
        },
        "place_of_delivery": {
          "type": "string",
          "description": "Final place of delivery"
        },
        "shipper_name": {
          "type": "string",
          "description": "Name of the shipper/exporter"
        },
        "consignee_name": {
          "type": "string",
          "description": "Name of the consignee/importer"
        },
        "notify_party": {
          "type": "string",
          "description": "Party to be notified"
        },
        "bl_date": {
          "type": "string",
          "description": "Bill of lading date"
        },
        "gross_weight": {
          "type": "number",
          "description": "Gross weight of shipment"
        },
        "weight_unit": {
          "type": "string",
          "description": "Weight unit (e.g., kg, lb)"
        },
        "number_of_packages": {
          "type": "number",
          "description": "Total number of packages"
        },
        "package_type": {
          "type": "string",
          "description": "Type of packaging (e.g., cartons, pallets)"
        },
        "freight_charges": {
          "type": "string",
          "description": "Freight payment terms (e.g., Prepaid, Collect)"
        },
        "container_numbers": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Container numbers"
        }
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Overall extraction confidence"
    },
    "low_confidence_fields": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Fields with low confidence that need verification"
    },
    "missing_fields": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Required fields that could not be extracted"
    },
    "extraction_timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the extraction was performed"
    }
  },
  "required": ["doc_id", "doc_type", "fields", "confidence"]
}
