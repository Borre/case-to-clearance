{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "extraction_bl.json",
  "title": "Bill of Lading Field Extraction (LLM Output)",
  "description": "Schema for structured field extraction from bills of lading returned by the LLM",
  "type": "object",
  "properties": {
    "fields": {
      "type": "object",
      "description": "Extracted fields from the bill of lading",
      "properties": {
        "bl_number": {
          "type": "string",
          "description": "Bill of lading number"
        },
        "bl_date": {
          "type": "string",
          "description": "Bill of lading date"
        },
        "carrier_name": {
          "type": "string",
          "description": "Name of the shipping carrier"
        },
        "vessel_name": {
          "type": "string",
          "description": "Name of the vessel"
        },
        "voyage_number": {
          "type": "string",
          "description": "Voyage number"
        },
        "port_of_loading": {
          "type": "string",
          "description": "Port where goods were loaded"
        },
        "port_of_discharge": {
          "type": "string",
          "description": "Port where goods will be discharged"
        },
        "place_of_delivery": {
          "type": "string",
          "description": "Final place of delivery"
        },
        "shipper_name": {
          "type": "string",
          "description": "Name of the shipper/exporter"
        },
        "consignee_name": {
          "type": "string",
          "description": "Name of the consignee/importer"
        },
        "notify_party": {
          "type": "string",
          "description": "Party to be notified"
        },
        "cargo_description": {
          "type": "string",
          "description": "Brief description of goods"
        },
        "gross_weight": {
          "type": ["number", "string"],
          "description": "Weight with units"
        }
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Overall extraction confidence"
    },
    "low_confidence_fields": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Fields with low confidence that need verification"
    },
    "missing_fields": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Required fields that could not be extracted"
    },
    "extraction_timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the extraction was performed"
    }
  },
  "required": ["fields", "confidence"]
}
